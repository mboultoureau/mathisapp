{% extends 'base.html.twig' %}

{% block title %}Nos {{ categorie.nom | lower }}{% endblock %}

{% block body %}

    <nav class="fil-ariane">
        <a href="{{ path('home') }}">TakeFood</a> >
        <a href="{{ path('categorie.index') }}">Nos produits</a> > 
        <a href="{{ path('categorie.view', {'slug': categorie.slug}) }}">Nos {{ categorie.nom | lower }}</a>
    </nav>

    <h1>Nos {{ categorie.nom | lower }}</h1>
    <hr />

    <section class="produits">

        {% if produits is empty %}
            <p>Nous n'avons encore aucun produit pour cette cat√©gorie pour le moment, repassez plus tard</p>
        {% endif %}

        {% for produit in produits %}
        <article>
            <a href="{{ path('produit.view', {'categorieSlug': categorie.slug, 'produitSlug': produit.slug }) }}">
                <img src="{{ asset( 'img/' ~ produit.image) }}" alt="{{ produit.nom }}" />
                <p>{{ produit.nom }}</p>
            </a>
        </article>
        {% endfor %}

    </section>

{% endblock %}
