{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}


<nav class="fil-ariane">
    <a href="{{ path('home') }}">TakeFood</a> > <a href="{{ path('category.index') }}">Nos produits</a>
</nav>

<h1>Nos produits</h1>
<hr>

<section class="produits">


    {% if categorys is empty %}
        <p>Nous n'avons encore aucune cat√©gorie de produits pour le moment, repassez plus tard</p>
    {% endif %}

    {% for category in categorys %}
    <article>
        <a href="{{ path('category.view', {'slug': category.slug}) }}">
            <img src="{{ asset( 'img/' ~ category.image) }}" alt="{{ category.name }}" />
            <p>{{ category.name }}</p>
        </a>
    </article>
    {% endfor %}

</section>

{% endblock %}
