{% extends 'base.html.twig' %}

{% block title %}Administration - Liste des catégories
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset("css/admin.css") }}">
{% endblock %}

{% block body %}

	<h1>Liste des catégories</h1>

	<section class="list">
		{% if categories is empty %}
			<p>Vous n'avez encore créé de catégorie..</p>
			<a href="{{ path("admin.category.create") }}" class="btn">Créer une catégorie</a>
		{% else %}
			<a href="{{ path("admin.category.create") }}" class="btn">Créer une catégorie</a>
			<ul>
				{% for category in categories %}
					<li>
						<div>
							<img src="{{ asset( 'img/' ~ category.icon) }}" alt="{{ category.name }}"/>
							<p>{{ category.name }}</p>
						</div>
						<div>
							<a href="{{ path('admin.category.edit', {'slug': category.slug}) }}">
								<i class="fas fa-edit"></i>
							</a>
							<a href="{{ path('admin.category.delete', {'slug': category.slug}) }}">
								<i class="fas fa-edit"></i>
							</a>
						</div>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</section>

{% endblock %}
