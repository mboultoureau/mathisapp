{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <h1>Connexion</h1>
    <hr>

    {% if errors %}
        <div>{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('security.login') }}" method="post">
        <div class="input-field">
            <label for="connexion_email">Adresse email</label>
            <input type="email" id="connexion_email" name="_username" required="required" maxlength="255" placeholder="marie@email.com" value="{{ last_username }}">
        </div>

        <div class="input-field">
            <label for="connexion_password">Mot de passe</label>
            <input type="password" id="connexion_password" name="_password" required="required" maxlength="255" placeholder="••••••••••••">
        </div>

        <input type="submit" value="Connexion">
    </form>

{% endblock %}
